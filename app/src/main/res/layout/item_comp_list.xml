<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="3dp"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        android:background="@drawable/shape_corners_top"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="169dp"
            android:layout_height="87.1dp"
            android:background="@drawable/shape_corners_top">
            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/comp_img"
                android:src="@drawable/item_test"
                app:riv_corner_radius_top_left="5dp"
                app:riv_corner_radius_top_right="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/text_browse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_withe"
                android:drawableLeft="@drawable/ic_browse"
                android:gravity="center"
                android:drawablePadding="4dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="7dp"
                android:textSize="12sp"
                android:text="1.3万"/>

            <TextView
                android:id="@+id/text_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_withe"
                android:drawableLeft="@drawable/ic_comments"
                android:gravity="center"
                android:drawablePadding="4dp"
                android:layout_toRightOf="@+id/text_browse"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="7dp"
                android:textSize="12sp"
                android:text="1.3万"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_name"
                android:text="【这算是打死】这是一个车上打撒厦"
                android:layout_margin="5dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@android:color/black"
                android:layout_width="match_parent"
                android:layout_height="35dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_type"
                    android:text="食物"
                    android:ellipsize="end"
                    android:textSize="12sp"
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="·"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="12sp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/text_child_type"
                    android:text="儿童零食"
                    android:textSize="12sp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>